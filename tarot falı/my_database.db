import sqlite3

# Veritabanı bağlantısı ve tablo oluşturma
conn = sqlite3.connect('tarot.db')
c = conn.cursor()

c.execute('''
          CREATE TABLE IF NOT EXISTS cards
          (name TEXT, upright_meaning TEXT, reversed_meaning TEXT, categories TEXT)
          ''')

# Kart ekleme örneği
c.execute('''
          INSERT INTO cards (name, upright_meaning, reversed_meaning, categories)
          VALUES ('Aşıklar', 'Birliktelik, büyük bir karar', 'Çatışma, uyumsuzluk', 'aşk, kişisel kararlar')
          ''')

conn.commit()
conn.close()

